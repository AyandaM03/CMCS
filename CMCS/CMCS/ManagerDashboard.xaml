<Window x:Class="CMCS.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS"
        mc:Ignorable="d"
       Title="Manager Dashboard" Height="400" Width="700">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Approved and Rejected Claims" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Claims Table -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="100"/>
                <DataGridTextColumn Header="Lecturer" Binding="{Binding Lecturer}" Width="150"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="100"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
            <Button Content="Generate Report" Width="120" Margin="5"/>
            <Button Content="Export PDF" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>