<Window x:Class="CMCS.ClaimSubmission"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Claim Submission" Height="400" Width="600">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Label column -->
            <ColumnDefinition Width="*"/>
            <!-- Input column -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.ColumnSpan="2" 
                   Text="Submit New Claim" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Hours Worked -->
        <Label Grid.Row="1" Grid.Column="0" Content="Hours Worked:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Width="200" Name="txtHoursWorked"/>

        <!-- Hourly Rate -->
        <Label Grid.Row="2" Grid.Column="0" Content="Hourly Rate:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="200" Name="txtHourlyRate"/>

        <!-- Notes -->
        <Label Grid.Row="3" Grid.Column="0" Content="Notes:" VerticalAlignment="Top"/>
        <TextBox Grid.Row="3" Grid.Column="1" Width="300" Height="60" TextWrapping="Wrap" Name="txtNotes"/>

        <!-- File Upload -->
        <Label Grid.Row="4" Grid.Column="0" Content="Upload Document:" VerticalAlignment="Center"/>
        <Button Grid.Row="4" Grid.Column="1" Content="Choose File" Width="120" Margin="0,5,0,0"/>

        <!-- Submit Button -->
        <Button Grid.Row="5" Grid.Column="1" Content="Submit Claim" Width="150" 
                Background="LightBlue" Margin="0,15,0,0" HorizontalAlignment="Left"/>
    </Grid>
</Window>
